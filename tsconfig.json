{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "baseUrl": "./src",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "removeComments": true,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowUnreachableCode": false,
      "incremental": true,
      "lib": [
        "ES2022"
      ],
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }